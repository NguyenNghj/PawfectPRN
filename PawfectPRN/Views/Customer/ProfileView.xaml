<Page x:Class="PawfectPRN.Views.Customer.ProfileView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PawfectPRN.Views.Customer"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1200"
      Title="ProfileView">

    <Page.Resources>
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="1" Background="#FFF2DF">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Text="PROFILE"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="40" FontWeight="Bold" Foreground="#8C6E63">
            </TextBlock>



            <TextBlock Grid.Row="2" Text="Full Name: " FontSize="25" FontWeight="Bold" HorizontalAlignment="Right"  VerticalAlignment="Center" Foreground="#D3A376"></TextBlock>
            <TextBlock Grid.Row="3" Text="Email: " FontSize="25" FontWeight="Bold" HorizontalAlignment="Right"  VerticalAlignment="Center" Foreground="#D3A376"></TextBlock>
            <TextBlock Grid.Row="4" Text="Phone: " FontSize="25" FontWeight="Bold" HorizontalAlignment="Right"  VerticalAlignment="Center" Foreground="#D3A376"></TextBlock>
            <TextBlock Grid.Row="5" Text="Address: " FontSize="25" FontWeight="Bold" HorizontalAlignment="Right"  VerticalAlignment="Center" Foreground="#D3A376"></TextBlock>
            <TextBlock Grid.Row="6" Text="Gender: " FontSize="25" FontWeight="Bold" HorizontalAlignment="Right"  VerticalAlignment="Center" Foreground="#D3A376"></TextBlock>

            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding textboxitem.FullName, Mode=TwoWay}" 
                     Height="45" Width="280" HorizontalAlignment="Left" Style="{StaticResource RoundedTextBoxStyle}"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding textboxitem.Email, Mode=TwoWay}" 
                     Height="45" Width="280" HorizontalAlignment="Left" Style="{StaticResource RoundedTextBoxStyle}"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding textboxitem.PhoneNumber, Mode=TwoWay}" 
                     Height="45" Width="280" HorizontalAlignment="Left" Style="{StaticResource RoundedTextBoxStyle}"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding textboxitem.Address, Mode=TwoWay}" 
                     Height="45" Width="280" HorizontalAlignment="Left" Style="{StaticResource RoundedTextBoxStyle}"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding textboxitem.Gender, Mode=TwoWay}" 
                     Height="45" Width="280" HorizontalAlignment="Left" Style="{StaticResource RoundedTextBoxStyle}"/>
            <Rectangle Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="4" Margin="66,43,0,0" Grid.Row="1" Stroke="#8C6E63" Fill="#8C6E63" VerticalAlignment="Top" Width="588" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Background="#FFF2DF">
            <Button
        Content="Update" 
        Height="50" Width="250"
        Background="#3E2522" Foreground="#D3A376" FontSize="25"
        Command="{Binding UpdateCommand}" 
        Grid.ColumnSpan="3">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>


        <Grid Grid.Row="0" Grid.Column="0" Background="#8C6E63">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>

                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="CHANGE PASSWORD"
     HorizontalAlignment="Center" VerticalAlignment="Center"
     FontSize="40" FontWeight="Bold" Foreground="#FFE0B2">
            </TextBlock>

            <TextBlock Grid.Row="1" Margin="60,0,0,0" Text="Old Password: " FontSize="25" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#D3A376"></TextBlock>

            <TextBox Grid.Row="2" Text="{Binding OldPassword, Mode=TwoWay}" 
               Height="45" Width="280" HorizontalAlignment="Center" Style="{StaticResource RoundedTextBoxStyle}" />
            
            <TextBlock Grid.Row="3" Margin="60,0,0,0" Text="New Password: " FontSize="25" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment="Center" Foreground="#D3A376"></TextBlock>

            <TextBox Grid.Row="4" Text="{Binding NewPassword, Mode=TwoWay}" 
               Height="45" Width="280" HorizontalAlignment="Center" Style="{StaticResource RoundedTextBoxStyle}"/>
            
            <TextBlock Grid.Row="5" Margin="60,0,0,0" Text="Confirm New Password: " FontSize="25" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment="Center" Foreground="#D3A376"></TextBlock>

            <TextBox  Grid.Row="6" Text="{Binding ConfirmNewPassword, Mode=TwoWay}" 
               Height="45" Width="280" HorizontalAlignment="Center" Style="{StaticResource RoundedTextBoxStyle}"/>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Background="#8C6E63">
            <Button
       Content="Change Password" 
       Height="50" Width="250"
       Background="#3E2522" Foreground="#D3A376" FontSize="25"
       Command="{Binding ChangePasswordCommand}" 
       Grid.ColumnSpan="3">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Page>
