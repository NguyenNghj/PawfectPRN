<Page x:Class="PawfectPRN.Views.Admin.ProductView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PawfectPRN.Views.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>

        <!-- Nhóm Data list -->
        <Grid Grid.Row="1" Grid.RowSpan="2" Background="Red">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition Width="361*"/>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="listView_Student" ItemsSource="{Binding products}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
            ColumnWidth="*" Margin="5,5,5,4"
            RowHeight="27" FontSize="13"
            CanUserAddRows="False" CanUserDeleteRows="False"
            IsReadOnly="True"
            AutoGenerateColumns="False"
            SelectionMode="Single"
            AlternatingRowBackground="LightGray"
            GridLinesVisibility="Horizontal"
            BorderThickness="1" Grid.ColumnSpan="2"                      
>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ProductId" Width="Auto" Binding="{Binding ProductId}"/>
                    <DataGridTextColumn Header="CategoryName" Width="Auto" Binding="{Binding CategoryName}"/>
                    <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Description" Width="*" Binding="{Binding Description}"/>
                    <DataGridTextColumn Header="Price" Width="*" Binding="{Binding Price}"/>
                    <DataGridTextColumn Header="StockQuantity" Width="*" Binding="{Binding StockQuantity}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Nhóm Input Fields-->
        <Grid Grid.Row="0" Grid.Column="0" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="ProductId" FontSize="11" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0"></TextBlock>
            <TextBlock Grid.Column="1" Text="CategoryName" FontSize="11" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
            <TextBlock Grid.Column="2" Text="Name" FontSize="11" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
            <TextBlock Grid.Column="3" Text="Description" FontSize="11" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
            <TextBlock Grid.Column="4" Text="Price" FontSize="11" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
            <TextBlock Grid.Column="5" Text="StockQuantity" FontSize="11" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>


            <TextBox Grid.Row="1" Grid.Column="0" Margin="5 0 10 5" Text="{Binding TextBoxItem.ProductId, Mode=TwoWay}" IsReadOnly="True"></TextBox>
            <!-- Thay thế TextBox CategoryId bằng ComboBox này -->
            <ComboBox Grid.Row="1" Grid.Column="1" Margin="0 0 10 5" 
                 ItemsSource="{Binding categories}" 
                 DisplayMemberPath="CategoryName"
                 SelectedValuePath="CategoryId" 
                 SelectedValue="{Binding TextBoxItem.CategoryId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 SelectedItem="{Binding SelectedCategory, Mode=TwoWay}">
            </ComboBox>
            <TextBox Grid.Row="1" Grid.Column="2" Margin="0 0 10 5" Text="{Binding TextBoxItem.Name, Mode=TwoWay}"></TextBox>
            <TextBox Grid.Row="1" Grid.Column="3" Margin="0 0 10 5" Text="{Binding TextBoxItem.Description, Mode=TwoWay}"></TextBox>
            <TextBox Grid.Row="1" Grid.Column="4" Margin="0 0 10 5" Text="{Binding TextBoxItem.Price, Mode=TwoWay}"></TextBox>
            <TextBox Grid.Row="1" Grid.Column="5" Margin="0 0 10 5" Text="{Binding TextBoxItem.StockQuantity, Mode=TwoWay}"></TextBox>
        </Grid>

        <!-- Nhóm Button -->
        <Grid Grid.Row="2" Background="Green">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="ADD" FontSize="16" Command="{Binding AddCommand}" Margin="45 10 45 10"></Button>
            <Button Grid.Row="0" Grid.Column="1" Content="UPDATE" FontSize="16" Command="{Binding UpdateCommand}" Margin="45 10 45 10"></Button>
            <Button Grid.Row="0" Grid.Column="2" Content="DELETE" FontSize="16" Command="{Binding DeleteCommand}" Margin="45 10 45 10"></Button>

        </Grid>
    </Grid>
</Page>
