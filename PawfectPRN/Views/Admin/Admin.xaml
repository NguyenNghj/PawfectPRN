<Window x:Class="PawfectPRN.Views.Admin.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PawfectPRN.Views.Admin"
        mc:Ignorable="d"
          WindowStartupLocation="CenterScreen"
        Title="Admin" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Menu Grid.Row="0">
            <MenuItem x:Name="Home" Header="Home" BorderBrush="Gray" Height="40"/>
            <MenuItem x:Name="Phone" Header="Phone" BorderBrush="Gray" Height="40"/>
        </Menu>

        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
